<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/picker_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:textColor="@color/darkGray"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/corner_radius_whisper"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/picker_down"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/number_picker_button"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/picker_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/darkGray"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/picker_up"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/number_picker_button"
            android:src="@drawable/ic_chevron_right_black" />

    </LinearLayout>

</LinearLayout>